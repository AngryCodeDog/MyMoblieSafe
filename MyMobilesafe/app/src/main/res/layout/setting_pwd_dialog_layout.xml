<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:background="#66ff6600"
        android:gravity="center"
        android:text="设置密码"
        android:textSize="35dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/setting_pwd_dialog_et_firstpwd"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="请输入密码"
        android:inputType="numberPassword"
        />

    <EditText
        android:id="@+id/setting_pwd_dialog_et_secondpwd"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="请再次输入密码"
        android:inputType="numberPassword"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/setting_pwd_dialog_bt_confirm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="确定"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/setting_pwd_dialog_bt_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#000000"/>
    </LinearLayout>


</LinearLayout>